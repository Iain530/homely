{

    "manifest_version": 2,
    "name": "Homely",
    "version": "1.0",

    "description": "Customised home page.",

    "icons": {
        "64": "icons/fireplace.png"
    },

    "permissions": [
        "bookmarks",
        "search",
        "topSites",
        "tabs",
        "storage",
        "https://www.metaweather.com/*",
        "https://suggestqueries.google.com/*"
    ],

    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },

    "background": {
        "scripts": ["background.js"]
    }
}
