{

    "manifest_version": 2,
    "name": "Homely",
    "version": "1.0",

    "description": "Customised new tab page.",

    "icons": {
        "64": "icons/fireplace.png"
    },

    "permissions": [
        "bookmarks",
        "search",
        "topSites",
        "tabs",
        "storage",
        "https://www.metaweather.com/*",
        "https://suggestqueries.google.com/*",
        "https://besticon-demo.herokuapp.com/*"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "homely@iaincattermole"
        }
    },

    "chrome_url_overrides": {
        "newtab": "index.html"
    },

    "background": {
        "scripts": ["background.js"]
    }
}
